{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "VM.h",
    "jsxFragmentFactory": "VM.Fragment",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
